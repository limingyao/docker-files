<configuration>
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://hadoop:8020/hbase1.3</value>
    </property>
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.clientPort</name>
        <value>2181</value>
    </property>
    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>zk</value>
    </property>
    <property>
        <name>zookeeper.znode.parent</name>
        <value>/hbase1.3</value>
    </property>
    <property>
        <name>zookeeper.session.timeout</name>
        <value>60000</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.dataDir</name>
        <value>/data/hbase/data/zookeeper</value>
    </property>
